<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <TextView
                android:id="@+id/textviewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/thanaPhone"
                android:layout_alignBottom="@+id/thanaPhone"
                android:layout_toEndOf="@+id/thanaPhone"
                android:layout_toRightOf="@+id/thanaPhone"
                android:fontFamily="monospace"
                android:text="Subject Phone"
                android:textColor="#FFFA1707"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/thanaPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/postCode"
                android:layout_alignStart="@+id/postCode"
                android:layout_below="@+id/postCode"
                android:layout_marginTop="10dp"
                android:text="Thana phone : "
                android:textColor="#FF5B5A5A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/areaName"
                android:layout_alignStart="@+id/areaName"
                android:layout_below="@+id/textviewName"
                android:layout_marginTop="19dp"
                android:text="Post Code :"
                android:textColor="#FF5B5A5A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/areaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:text="Area Name :"
                android:textColor="#FF5B5A5A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/areaName"
                android:layout_alignBottom="@+id/areaName"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/areaName"
                android:layout_toRightOf="@+id/areaName"
                android:fontFamily="serif"
                android:text=" Subject Name"
                android:textColor="#2C2C72"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewFullForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/postCode"
                android:layout_alignBottom="@+id/postCode"
                android:layout_toEndOf="@+id/areaName"
                android:layout_toRightOf="@+id/areaName"
                android:fontFamily="serif"
                android:text="Subject Full Form"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>