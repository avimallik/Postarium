<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.postarium.arm_avi.postarium.DataDisp"
    tools:showIn="@layout/activity_data_disp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/areaNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textMultiLine|textNoSuggestions" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Area Name : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView" />

    <ImageView
        android:id="@+id/areaClipBrd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/clipbrd"
        android:layout_below="@+id/cardView"
        android:layout_alignRight="@+id/cardView"
        android:layout_alignEnd="@+id/cardView"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Code : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/areaClipBrd"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/areaClipBrd"
        android:layout_alignRight="@+id/areaClipBrd"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/postCodeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName|textNoSuggestions" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/postClipBrd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        app:srcCompat="@drawable/clipbrd"
        android:layout_below="@+id/cardView2"
        android:layout_alignRight="@+id/cardView2"
        android:layout_alignEnd="@+id/cardView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2"
        android:layout_below="@+id/postClipBrd"
        android:text="Thana Phone No : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/postClipBrd"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/postClipBrd"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="8dp"
        android:id="@+id/cardView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/phoneTxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/countryCodeTxt"
                android:layout_toRightOf="@+id/countryCodeTxt"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/countryCodeTxt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="+88"
                android:typeface="sans" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/thanaClipBrd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/clipbrd"
        android:layout_below="@+id/cardView3"
        android:layout_alignRight="@+id/cardView3"
        android:layout_alignEnd="@+id/cardView3" />

    <ImageView
        android:id="@+id/teleThana"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/thanaClipBrd"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/thanaClipBrd"
        android:layout_toStartOf="@+id/thanaClipBrd"
        app:srcCompat="@drawable/telephone" />

</RelativeLayout>
